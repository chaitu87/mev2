extends ../shared/layout

block main-content
	.container
		.row
			.col-md-4.offset-md-4.col-xs-12.login-page
				form(method="post", action="", class='form-horizontal')
					fieldset
						.form-group
							label(for="username", class='col-md-2 control-label') Username
							.col-md-12
								input(id="username" class="form-control" type="text" name="username" placeholder="Username")
						.form-group
							label(for="password", class='col-md-2 control-label') Password
							.col-md-12
								input(id="password" class="form-control" type="password" name="password" placeholder="Password")
						.form-group
							.col-md-12
								button(type="submit" class="btn btn-primary btn-block") Login